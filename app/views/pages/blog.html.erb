
<h1>Our Blog</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Picture</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
    <tr>
      <td><%= blog.title %></td>
      <td><%= image_tag blog.picture_url(:thumb) if blog.picture? %></td>
      <td><%= blog.body %></td>     
    </tr>
    <% end %>
  </tbody>
</table>
